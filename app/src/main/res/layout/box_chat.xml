<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="top"
            android:src="@drawable/ellipse_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@null" />


        <ImageView
            android:background="@drawable/item_border_chat_corner"
            android:layout_gravity="top"
            android:rotation="180"
            android:backgroundTint="@null"
            android:layout_width="12dp"
            android:layout_height="12dp"
             />

        <RelativeLayout
            android:orientation="vertical"
            android:background="@drawable/item_border_chat_rounded"
            android:layout_width="match_parent"
            android:backgroundTint="@null"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorPrimary"
                android:fontFamily="@font/iran_sans"
                android:paddingBottom="10dp"
                android:text="خانم موسوی"
                android:textColor="?android:textColorPrimary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/passage_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_chat"
                android:background="?colorPrimary"
                android:ellipsize="end"
                android:fontFamily="@font/iran_sans"
                android:singleLine="true"
                android:text="آقای الهی نیا تا ساعت 2 منتظرتونن. لطفا تا ساعت 2 در شرکت حاضر باشید ."
                android:textColor="?android:textColorSecondary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/passage_long"
                android:visibility="gone"
                android:layout_below="@id/title_chat"
                android:layout_width="match_parent"
                android:backgroundTint="?android:solidColor"
                android:layout_height="wrap_content"
                android:text="آقای الهی نیا تا ساعت 2 منتظرتونن. لطفا تا ساعت 2 در شرکت حاضر باشید ."
                android:textSize="14dp"
                android:textColor="?android:textColorSecondary"
                android:fontFamily="@font/iran_sans"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_showMore"
            android:text="نمایش بیشتر"
            android:fontFamily="@font/iran_sans"
            android:textColor="@drawable/s"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_showMore_down"
            android:layout_gravity="center"
            android:src="@drawable/ic_more_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@null" />

        <ImageView
            android:id="@+id/img_showMore_up"
            android:rotation="180"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/ic_more_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@null" />
    </LinearLayout>






</LinearLayout>