<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/line"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@null"
        android:background="@drawable/item_border_line_sheet"
        android:orientation="horizontal" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll"
        android:backgroundTint="@null"
        android:layout_centerHorizontal="true"
        android:background="?android:solidColor" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_below="@id/line"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_setting"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/picture_user"
            app:tint="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:gravity="right"
                android:text="رقیه کریمی"
                android:textColor="?android:textColorPrimary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/phoneSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_fanum"
                android:gravity="right"
                android:text="09334659477"
                android:textColor="?android:textColorPrimary"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/moon_ic"
        android:drawablePadding="10dp"
        android:fontFamily="@font/iran_sans"
        android:text="حالت شب"
        android:textColor="?android:textColorPrimary"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/settingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/setting2_ic"
        android:drawablePadding="10dp"
        android:fontFamily="@font/iran_sans"
        android:text="تنظیمات"
        android:textColor="?android:textColorPrimary"
        android:textSize="14dp" />

    <Switch
        android:id="@+id/switch_nightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="19dp" />


    <TextView
        android:id="@+id/exitAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/exist_ic"
        android:drawablePadding="10dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/iran_sans"
        android:paddingVertical="10dp"
        android:paddingStart="20dp"
        android:text="خروج از حساب کاربری"
        android:textColor="#E4897B"
        android:textSize="14dp" />


</RelativeLayout>