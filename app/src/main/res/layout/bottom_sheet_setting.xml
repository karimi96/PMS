<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <View
        android:id="@+id/line"
        android:background="@color/text_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="120dp"
        android:layout_height="3dp"/>

    <View
        android:id="@+id/line1"
        android:background="@color/border_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/line"
        android:layout_alignBottom="@id/line1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/picture_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans"
                android:gravity="right"
                android:text="رقیه کریمی"
                android:textColor="@color/text_main"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_fanum"
                android:gravity="right"
                android:text="09334659477"
                android:textColor="@color/text_secondary"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/moon"
        android:text="حالت شب"
        android:fontFamily="@font/iran_sans"
        android:textSize="16dp"
        android:drawablePadding="10dp"
        android:layout_below="@id/line1"
        android:textColor="@color/text_main"
        android:drawableRight="@drawable/moon_ic"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/setting2_ic"
        android:drawablePadding="10dp"
        android:fontFamily="@font/iran_sans"
        android:text="تنظیمات"
        android:textColor="@color/text_main"
        android:textSize="16dp" />

    <Switch
        android:layout_below="@id/line1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="خروج از حساب کاربری"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/exist_ic"
        android:textColor="#E4897B"
        android:textSize="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/iran_sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>