<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:outlineSpotShadowColor="#E4897B"
        android:layout_marginHorizontal="16dp"
        android:layout_height="80dp">

        <RelativeLayout
            android:background="@drawable/item_border_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_alignParentStart="true"
                android:text="رفع خرابی"
                style="@style/CustomText"
                android:textColor="@color/text_main"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/img_place"
                android:src="@drawable/place_ic"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/img_place"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/iran_sans_fanum"
                android:text="15 خرداد کوچه 39"
                android:textColor="@color/text_main"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/iran_sans_fanum"
                android:text="1401/03/28"
                android:textColor="#E4897B"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/circle"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/back_circle"
                android:fontFamily="@font/iran_sans_fanum"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_main"
                android:textSize="12dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/iran_sans_fanum"
                android:text="فوری"

                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/circle"
                android:textColor="#E4897B"
                android:textSize="12dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>