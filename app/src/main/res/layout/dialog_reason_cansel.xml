<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_border_dialog"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/rc"
        layout="@layout/box_reason_c" />

<include android:id="@+id/sp"
    android:layout_below="@id/rc"
    layout="@layout/box_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <include android:id="@+id/ex"
        layout="@layout/box_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp"/>

    <TextView
        android:text="ارسال"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_below="@id/ex"
        android:textColor="@color/white"
        android:fontFamily="@font/iran_sans"
        android:background="@drawable/item_btn_background"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="59dp"/>

</RelativeLayout>