<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_back_bottom_sheet"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/_120sdp"
        android:background="@color/text_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_height="3dp"/>

    <TextView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/iran_sans"
        android:text="فیلتر سازی"
        android:textColor="@color/text_main"
        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/relative_installation"
        android:layout_marginTop="15dp"
        android:layout_below="@id/filter"
        android:orientation="horizontal"
        android:background="#f4f5f7"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:text="نصب"
            android:fontFamily="@font/iran_sans"
            android:textSize="16dp"
            android:textColor="@color/text_main"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_round_check_24"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_Collect"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/relative_installation"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/iran_sans"
            android:text="جمع آوری"
            android:textColor="@color/text_main"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:src="@drawable/ic_round_check_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_Visit"
        android:layout_below="@id/relative_Collect"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:text="بازدید دوره"
            android:fontFamily="@font/iran_sans"
            android:textSize="16dp"
            android:textColor="@color/text_main"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:src="@drawable/ic_round_check_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_FixedCrash"
        android:layout_below="@id/relative_Visit"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:text="رفع خرابی"
            android:fontFamily="@font/iran_sans"
            android:textSize="16dp"
            android:textColor="@color/text_main"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:src="@drawable/ic_round_check_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>