<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PMS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#F4F5F7</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/text_main</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/holo_red_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">#026097</item>

        <item name="android:layoutDirection">rtl</item>
        <item name="android:direction">right_to_left</item>

        <item name="android:textColorPrimary">@color/text_main</item>
        <item name="android:textColorSecondary">#83888C</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="colorControlNormal">@android:color/holo_red_dark</item>


        <item name="background">@color/blue_light</item>
        <item name="backgroundColor">@color/text_main</item>

        <item name="tint">@color/text_main</item>
        <item name="android:strokeColor">#E8E8E8</item>
        <item name="android:fillColor">#B7B7B7</item>
        <item name="android:solidColor">#F4F5F7</item>

        <item name="cardElevation">40dp</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">#E8E8E8</item>
    </style>


    <style name="Custom.Them.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/text_main</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

<!--        <item name="android:background">@color/white</item>-->
        <item name="background">@color/blue_light</item>
        <item name="android:colorBackground">?colorOnPrimary</item>


        <item name="android:textColorPrimary">@color/text_main</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <item name="android:fillColor">@color/text_hint</item>
        <item name="android:solidColor">@color/gray_back</item>

        <item name="android:layoutDirection">rtl</item>
        <item name="android:direction">right_to_left</item>
    </style>


    <style name="CustomText">
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="CustomEditText">
        <item name="android:fontFamily">@font/iran_sans_fanum</item>
        <item name="android:textSize">14dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/item_back_validation</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
    </style>


    <style name="CustomTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">33dp</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="endIconTint">?android:textColorHint</item>
        <item name="startIconTint">?android:textColorHint</item>
        <item name="hintTextAppearance">@style/CustomHintSize</item>
    </style>


    <style name="CustomTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?android:textColorHint</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textSize">14dp</item>
    </style>


    <style name="CustomGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="CustomView">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginEnd">4.3dp</item>
        <item name="android:layout_marginBottom">5.5dp</item>
        <item name="android:background">?colorOnPrimary</item>
        <item name="android:backgroundTint">@null</item>
    </style>


    <style name="CustomHintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">11dp</item>
    </style>


    <!--    set corner for bottomSheet-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/item_border_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="colorSecondary">@color/blue_night</item>
        <item name="background">?background</item>
        <item name="android:textColor">?colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/text_main</item>
        <item name="android:textColorSecondary">#83888C</item>

        <item name="android:solidColor">#e8e8e8</item>
<!--        <item name="colorPrimary">#F4F5F7</item>-->

        <!--        <item name="android:backgroundDimAmount">0.3</item>-->
        <!--        <item name="android:windowFrame">@null</item>-->
        <!--        <item name="android:backgroundDimEnabled">false</item>-->
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--        <item name="android:background">@null</item>-->
        <!--        <item name="background">@android:color/holo_red_dark</item>-->
        <!--        <item name="backgroundTint">@android:color/holo_green_dark</item>-->
        <!--        <item name="colorOnBackground">@android:color/holo_blue_dark</item>-->

        <item name="backgroundColor">?android:textColorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <!--    Animation For Dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_to_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_to_down</item>
    </style>

</resources>