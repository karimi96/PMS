<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PMS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_night</item>
        <item name="colorPrimaryVariant">@color/blue_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#0D0D0D</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#9498A1</item>
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:text">#9498A1</item>-->

        <item name="android:background">#292929</item>
        <item name="android:fillColor">#9498A1</item>
        <item name="android:colorBackground">@color/white</item>


        <item name="android:backgroundTint">#0D0D0D</item>
        <item name="android:strokeColor">#343434</item>
        <item name="tint">@color/white</item>
        <item name="android:solidColor">#292929</item>

        <item name="cardElevation">40dp</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">#828282</item>


        <item name="android:layoutDirection">rtl</item>
        <item name="android:direction">right_to_left</item>
    </style>




    <style name="Custom.Them.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
<!--         Secondary brand color. -->
        <item name="colorSecondary">@color/text_main</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#0D0D0D</item>

        <item name="android:background">#0D0D0D</item>
        <item name="background">@color/blue_light</item>


        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">#9498A1</item>


        <item name="android:fillColor">#9498A1</item>


        <item name="android:layoutDirection">rtl</item>
        <item name="android:direction">right_to_left</item>
    </style>




